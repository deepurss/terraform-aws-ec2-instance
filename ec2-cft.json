{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "firstec2instance",
	"Mappings": {
		"Environments": {
			"dev": {
				"SecurityGroupsEast": [
					"sg-04ac5a23a5bf1aae9"

				],
				"SubnetsEast": [
					"subnet-00a0a347942accc07"
				],
				"AZsEast": [
					"us-east-2c"
				],
				"environmentparameter": "dev"


			}
		}
	},
	"Parameters": {
		"EnvironmentValue": {
			"AllowedValues": [
				"dev"
			],
			"Default": "dev",
			"Description": "What is the environment?",
			"Type": "String"
		},

		"InstanceType": {
			"Description": "Provide the Instance Type. Ex: m4.large/m4.xlarge",
			"Type": "t2.micro"
		},
		"AppInstanceName": {
			"Description": "InstanceIdentifier for tagging on Console",
			"Type": "t2.micro",
			"Default": "DeepaEC2user"
		}
	},
	"Resources": {
		"LaunchConfig": {
			"Type": "AWS::AutoScaling::LaunchConfiguration",
			"Properties": {
				"BlockDeviceMappings": [{
					"DeviceName": "/dev/sdk",
					"Ebs": {
						"DeleteOnTermination": false,
						"Encrypted": true,
						"Iops": "100",
						"VolumeSize": "300",
						"VolumeType": "io1"
					}
				}],
				"SecurityGroups": {
					"Fn::FindInMap": ["Environments",
						{
							"Ref": "EnvironmentValue"
						},
						"SecurityGroupsEast"
					]
				}
			},
			"InstanceType": {
				"Fn::FindInMap": ["Environments",
					{
						"Ref": "EnvironmentValue"
					},
					"InstanceType"
				]
			}
		},
		"UserData": {
			"Fn::Base64": {
				"Fn::Join": [
					"", [
						"#!/bin/bash -v \n",
						"yum update -y \n",
						"yum install java-1.8.0-openjdk-devel.x86_64 -y \n",
						"yum install wget -y \n",



						{
							"Fn::FindInMap": ["Environments", {
								"Ref": "EnvironmentValue"
							}, "nginx_env"]
						}
					]
				]
			}


		}
	},
	"AutoScaleGroup": {
		"UpdatePolicy": {
			"AutoScalingScheduledAction": {
				"IgnoreUnmodifiedGroupSizeProperties": "true"
			},
			"AutoScalingRollingUpdate": {
				"MinInstancesInService": "1",
				"MaxBatchSize": "2",
				"PauseTime": "PT2M",
				"WaitOnResourceSignals": "true"
			}
		},
		"Type": "AWS::AutoScaling::AutoScalingGroup",
		"Properties": {
			"AvailabilityZones": {
				"Fn::FindInMap": ["Environments", {
					"Ref": "EnvironmentValue"
				}, "AZsEast"]
			},
			"LaunchConfigurationName": {
				"Ref": "LaunchConfig"
			},
			"MaxSize": "1",
			"MinSize": "1",
			"VPCZoneIdentifier": {
				"Fn::FindInMap": ["Environments", {
					"Ref": "EnvironmentValue"
				}, "SubnetsEast"]
			}
		}

	}
}
